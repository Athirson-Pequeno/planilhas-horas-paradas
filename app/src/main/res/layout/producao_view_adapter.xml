<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/fundo_item_recycler_view">

    <TextView
        android:id="@+id/textViewCelFragmentProducao"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingHorizontal="7dp"
        android:text="TextView"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewDesArtigoFragmentProducao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autoSizeMaxTextSize="12sp"
            android:paddingHorizontal="7dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textViewCodArtigoFragmentProducao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autoSizeMaxTextSize="12sp"
            android:paddingHorizontal="7dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewDesCorFragmentProducao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoSizeMaxTextSize="12sp"
            android:paddingHorizontal="7dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textViewCodCorFragmentProducao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoSizeMaxTextSize="12sp"
            android:paddingHorizontal="7dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#000000" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewTamahoFragmentProducao"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingHorizontal="7dp"
        android:text="23/4"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textViewQuantidadeFragmentProducao"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"

        android:paddingHorizontal="7dp"
        android:text="TextView"
        android:textColor="#000000" />
</LinearLayout>